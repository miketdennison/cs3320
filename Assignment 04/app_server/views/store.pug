extends layout

block content
  main
    .container
      // MAIN CONTENT HERE
      .row.justify-content-center
        .col-md-4.border.p-2
          h4 Select Items for Purchase:
          form
            select#storeFormItems.browser-default.custom-select.mb-4
              option(value='null' selected='' disabled='') Select Item
              each row in products
                option(value=`${row.description}` data-amount=row.unitPrice)=`${row.description} ($${row.unitPrice}/ea)`
            .row
              .col
                input#storeFormQuantity.form-control.mb-4(type='text' placeholder='Enter Quantity' required='')
              .col
                | Unit Price: 
                span#unitPriceField N/A
              button#add-to-cart.btn.btn-info.mx-4.btn-block(type='button')
                | Add to Cart
              button#clear.btn.btn-info.mx-4.btn-block(type='button')
                | Clear
              button#checkout-button.btn.btn-info.mx-4.btn-block(type='button')
                | Checkout
        .col-md-7.ml-1.border
          .table-responsive.text-nowrap
            table#items-table.table
              thead
                tr
                  th(scope='col') #
                  th(scope='col') Item
                  th(scope='col') Price Per Unit
                  th(scope='col') Quantity
              tbody
            p
              b Total:
              span#totalField
  script(type="text/javascript" src="./js/store.js")
