extends layout

block content
  main
  .container
    .row
      .col-md-12
        // Default form login
        form.text-center.border.border-light.p-5(action='#' method="POST")
          p.h4.mb-4 Sign in
          // Email
          input#defaultLoginFormEmail.form-control.mb-4(type='email' placeholder='E-mail' name='userName')
          // Password
          input#defaultLoginFormPassword.form-control.mb-4(type='password' placeholder='Password' name='password')
          .d-flex.justify-content-around
            div
              // Remember me
              .custom-control.custom-checkbox
                input#defaultLoginFormRemember.custom-control-input(type='checkbox')
                label.custom-control-label(for='defaultLoginFormRemember') Remember me
            div
              // Forgot password
              a(href='') Forgot password?
          // Sign in button
          button.btn.btn-info.btn-block.my-4(type='submit')
            | Sign in
          // Register
          p
            | Not a member?
            a(href='/register') 
              | Register
          // Social login
          p or sign in with:
          a.mx-2(href='#' role='button')
            i.fab.fa-facebook-f.light-blue-text
          a.mx-2(href='#' role='button')
            i.fab.fa-twitter.light-blue-text
          a.mx-2(href='#' role='button')
            i.fab.fa-linkedin-in.light-blue-text
          a.mx-2(href='#' role='button')
            i.fab.fa-github.light-blue-text
